{
  "name": "minimal-typescript-express-boilerplate",
  "version": "0.0.1",
  "description": "Minimal typescript Express API with TSOA and Swagger",
  "author": "Turbo <me@turboninh.com>",
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:build": "docker build -t turbo/minimal-express-boilerplate ./",
    "docker:run": "docker run --name=turbo-minimal-express-boilerplate -p 3000:3000 turbo/minimal-express-boilerplate"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/app.ts"
  },
  "dependencies": {
    "express": "^4.21.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.7.5",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.8.1"
  },
  "engineStrict": true,
  "engines": {
    "node": "20.x.x",
    "yarn": "Please use pnpm",
    "npm": "Please use pnpm"
  }
}
